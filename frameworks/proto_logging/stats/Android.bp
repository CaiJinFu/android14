cc_library_host_shared {
    name: "libstats_proto_host",
    srcs: [
        "atom_field_options.proto",
        ":libstats_atom_message_protos",
    ] + enum_protos + atom_protos,

    cflags: [
        "-Wno-deprecated-declarations",
    ],

    proto: {
        type: "full",
        export_proto_headers: true,
        include_dirs: [
            "external/protobuf/src",
        ],
    },
}

