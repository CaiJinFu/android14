<resources>
    <!-- Categories of notification to be shown as heads-up immediately as they are triggered -->
    <array name="headsup_category_immediate_show">
        <item>@string/category_car_emergency</item>
        <item>@string/category_navigation</item>
        <item>@string/category_call</item>
    </array>
    <!-- Ordered priority of categories of notification to sort heads-up when they are waiting
    in the queue to be triggered -->
    <array name="headsup_category_priority">
        <item>@string/category_message</item>
    </array>
    <!-- Allowlist packages when in foreground, heads-up notifications will be throttled -->
    <array name="headsup_throttled_foreground_packages">
        <item>@string/pkg_car_dialer</item>
    </array>
</resources>