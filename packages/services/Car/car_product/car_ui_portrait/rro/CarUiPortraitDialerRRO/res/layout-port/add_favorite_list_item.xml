<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="@dimen/add_fav_button_width"
        android:layout_height="@dimen/add_fav_button_height"
        android:background="@drawable/add_fav_background"
        android:drawableLeft="@drawable/ic_add"
        android:text="@string/add_favorite_button_text"
        style="@style/AddFavoriteButtonStyle"
        android:gravity="center"
        android:paddingHorizontal="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="false"
        android:focusable="false"/>
</FrameLayout>
