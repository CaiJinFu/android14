<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/select_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Display:"/>

        <Spinner
            android:id="@+id/display_select_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/select_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start injecting"/>

        <Button
            android:id="@+id/select_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop injecting"/>
    </LinearLayout>

    <TextView
        android:id="@+id/touch_point_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Touch here"
        android:background="#FF777777"/>
</LinearLayout>
