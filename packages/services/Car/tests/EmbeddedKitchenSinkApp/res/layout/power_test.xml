<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
            android:clickable="true"
            android:id="@+id/btnPwrShutdown"
            android:layout_height="@dimen/powerBtnHeight"
            android:layout_width ="@dimen/powerBtnWidth"
            android:text="@string/power_shutdown"
            android:textSize="@dimen/powerTextSize"/>

        <Button
            android:clickable="true"
            android:id="@+id/btnPwrSleep"
            android:layout_height="@dimen/powerBtnHeight"
            android:layout_width ="@dimen/powerBtnWidth"
            android:text="@string/power_sleep"
            android:textSize="@dimen/powerTextSize"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:clickable="true"
            android:id="@+id/btnPwrRequestShutdown"
            android:layout_height="@dimen/powerBtnHeight"
            android:layout_width ="@dimen/powerBtnWidth"
            android:text="@string/power_request_shutdown"
            android:textSize="@dimen/powerTextSize"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="@dimen/powerBtnHeight"
                    android:layout_width="@dimen/wrap_content"
                    android:text="Display ID"/>

                <Spinner
                    android:id="@+id/display_spinner"
                    android:layout_height="100dp"
                    android:layout_width="@dimen/powerBtnHeight"
                    android:text="Select display"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <Button
                    android:clickable="true"
                    android:id="@+id/btnDisplayOn"
                    android:layout_height="@dimen/powerBtnHeight"
                    android:layout_width ="@dimen/powerBtnWidth"
                    android:text="@string/power_display_on"
                    android:textSize="@dimen/powerTextSize"/>

                <Button
                    android:clickable="true"
                    android:id="@+id/btnDisplayOff"
                    android:layout_height="@dimen/powerBtnHeight"
                    android:layout_width ="@dimen/powerBtnWidth"
                    android:text="@string/power_display_off"
                    android:textSize="@dimen/powerTextSize"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="@dimen/wrap_content"
                android:layout_width="@dimen/wrap_content"
                android:text="@string/power_display_mode"
                android:textSize="@dimen/powerTextSize"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/power_mode_layout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
