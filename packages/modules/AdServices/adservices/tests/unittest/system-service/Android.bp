android_test {
    name: "AdServicesManagerServiceTests",
    srcs: [
        "src/com/android/server/adservices/*.java",
        "src/**/*.java",
    ],
    defaults: ["adservices-extended-mockito-defaults"],
    manifest: "AndroidManifest.xml",
    test_config: "AndroidTest.xml",
    static_libs: [
        "androidx.test.runner",
        "androidx.test.core",
        "truth-prebuilt",
        "services.core",
        "framework-adservices.impl",
        "adservices-test-utility",
        "service-adservices.impl",
        // Workaround for b/262282035. Needed to access the SdkSandboxManagerLocal.
        "service-sdksandbox.impl",
    ],
    libs: [
        "android.test.base",
        "android.test.mock",
        "android.test.runner",
        "framework-configinfrastructure",
    ],
    sdk_version: "module_current",
    min_sdk_version: "Tiramisu",
    target_sdk_version: "Tiramisu",
    test_suites: [
        "general-tests",
        "mts-adservices"
    ],
    test_mainline_modules: ["com.google.android.adservices.apex"],
}
