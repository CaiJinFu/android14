<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- **************************************************
    MAIN STYLES
    *************************************************** -->
    <style name="MainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="PreferenceStyle">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="MainStyle.SettingsControlButton" parent="android:Widget.DeviceDefault.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">16sp</item>
        <item name="android:minWidth">74dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamilyMedium</item>
    </style>

    <style name="MainStyle.PrimaryButton">
        <item name="android:theme">@style/RoundedCornerThemeOverlay</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamilyMedium</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/settingslib_state_on_color</item>
        <item name="android:colorControlHighlight">@color/ripple_material_inverse</item>
        <item name="android:textColor">@color/settingslib_primary_dark_device_default_settings</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainStyle.PrimaryButtonVariant" parent="MainStyle.PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="MainStyle.PrimaryButtonNegative">
        <item name="android:theme">@style/RoundedCornerThemeOverlay</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamilyMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textColor">@color/settingslib_accent_primary_variant</item>
        <item name="android:textColorHighlight">@color/ripple_material_inverse</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundedCornerThemeOverlay">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:buttonCornerRadius">24dp</item>
    </style>

    <style name="NotificationButtonContainer">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- **************************************************
    FONT STYLES
    *************************************************** -->
    <style name="MainStyle.H1">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H1</item>
    </style>

    <style name="MainStyle.H4">
        <item name="android:textAppearance">@style/TextAppearance.H4</item>
    </style>

    <style name="MainStyle.H5">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H5</item>
    </style>

    <style name="MainStyle.H6">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H6</item>
    </style>

    <style name="MainStyle.Body1">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
    </style>

    <style name="MainStyle.Body1Bold">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1.Bold</item>
    </style>

    <style name="MainStyle.Body1BoldBullet">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1.Bold</item>
    </style>

    <style name="MainStyle.Body1BulletSubtext">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
    </style>

    <style name="MainStyle.Body2">
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
    </style>

    <style name="MainStyle.Body2BoldBullet">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2.Bold</item>
    </style>

    <style name="MainStyle.Body2BulletSubtext">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
    </style>

    <style name="MainStyle.Subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="TextAppearance.H1">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextAppearance.H4">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.H5">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.H6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Body2.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
