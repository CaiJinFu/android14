<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/videoRemoteDeviceTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/settings_remote_device_title"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/videoRemoteDeviceIpEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/videoRemoteDeviceTitle"
        android:ems="15"
        android:hint="@string/ip_address_placeholder"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/remoteVideoPortNumberEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/videoRemoteDeviceIpEditText"
        android:ems="5"
        android:hint="@string/port_number_placeholder"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/videoCodecTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/remoteVideoPortNumberEditText"
        android:text="@string/video_codec_setting"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoCodecs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoCodecTitle"
        android:layout_below="@id/remoteVideoPortNumberEditText" />

    <TextView
        android:id="@+id/videoCodecProfileTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoCodecTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_codec_profile"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoCodecProfiles"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoCodecProfileTitle"
        android:layout_below="@id/videoCodecTitle" />

    <TextView
        android:id="@+id/videoCodecLevelTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoCodecProfileTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_codec_level"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoCodecLevels"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoCodecLevelTitle"
        android:layout_below="@id/videoCodecProfileTitle" />

    <TextView
        android:id="@+id/videoModeTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoCodecLevelTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_modes"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoModes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoModeTitle"
        android:layout_below="@id/videoCodecLevelTitle" />

    <TextView
        android:id="@+id/videoCameraIdTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoModeTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_camera_id"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoCameraIds"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoCameraIdTitle"
        android:layout_below="@id/videoModeTitle" />

    <TextView
        android:id="@+id/videoCameraZoomTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoCameraIdTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_camera_zoom"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoCameraZoom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoCameraZoomTitle"
        android:layout_below="@id/videoCameraIdTitle" />

    <TextView
        android:id="@+id/videoFramerateTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoCameraZoomTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_framerate"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoFramerates"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoFramerateTitle"
        android:layout_below="@id/videoCameraZoomTitle" />

    <TextView
        android:id="@+id/videoBitrateTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoFramerateTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_bitrate"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoBitrates"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoBitrateTitle"
        android:layout_below="@id/videoFramerateTitle" />

    <TextView
        android:id="@+id/videoDeviceOrientationTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoBitrateTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_device_orientation"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoDeviceOrientations"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoDeviceOrientationTitle"
        android:layout_below="@id/videoBitrateTitle" />

    <TextView
        android:id="@+id/videoPauseImagePathTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoDeviceOrientationTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_pause_image_path"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/videoCvoValueTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoPauseImagePathTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_cvo_value"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoCvoValues"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoCvoValueTitle"
        android:layout_below="@id/videoPauseImagePathTitle" />

    <TextView
        android:id="@+id/videoResolutionTitle"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/videoCvoValueTitle"
        android:layout_alignStart="@id/videoCodecTitle"
        android:text="@string/video_resolution"
        android:textAlignment="textStart" />

    <Spinner
        android:id="@+id/spinnerVideoResolution"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/videoResolutionTitle"
        android:layout_below="@id/videoCvoValueTitle" />

    <Button
        android:id="@+id/saveVideoSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/videoCvoValueTitle"
        android:layout_centerHorizontal="true"
        android:background="@color/teal_700"
        android:hapticFeedbackEnabled="true"
        android:onClick="saveVideoSettingsOnClick"
        android:text="@string/save" />

</RelativeLayout>