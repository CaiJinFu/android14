package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "service-devicelock-sources",
    srcs: [
        "java/**/*.java",
    ],
}

filegroup {
    name: "service-devicelock-sources-shared-with-tests",
    srcs: ["java/**/DeviceLockControllerPackageUtils.java"],
    path: "java",
    visibility: [
        "//packages/modules/DeviceLock:__subpackages__",
    ],
}

java_library {
    name: "service-devicelock",
    srcs: [
        ":service-devicelock-sources",
    ],
    defaults: ["framework-system-server-module-defaults"],
    sdk_version: "system_server_current",
    min_sdk_version: "UpsideDownCake",
    libs: [
        "framework-devicelock.impl",
        "framework-permission",
        "framework-permission-s",
    ],
    static_libs: [
        "devicelockcontroller-interface",
    ],
    apex_available: [
        "com.android.devicelock",
    ],
    installable: true,
}
